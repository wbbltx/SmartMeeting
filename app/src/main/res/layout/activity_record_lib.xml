<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/simple_background"
    tools:context="com.newchinese.smartmeeting.ui.meeting.activity.RecordLibActivity">

    <include
        android:id="@+id/record_lib_bar"
        layout="@layout/bar_base" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/record_lib_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/record_lib_bar"
        android:paddingLeft="6dp"
        android:paddingRight="6dp" />

    <include
        android:id="@+id/record_lib_oper"
        layout="@layout/layout_create_record"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="gone" />

</RelativeLayout>
