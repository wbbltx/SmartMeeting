<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/simple_background"
    android:orientation="vertical"
    tools:context="com.newchinese.smartmeeting.ui.mine.activity.ChangePwdActivity">
    <include layout="@layout/bar_base" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <com.newchinese.smartmeeting.widget.EditView
            android:id="@+id/ev_update_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.newchinese.smartmeeting.widget.EditView
            android:id="@+id/ev_update_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.newchinese.smartmeeting.widget.EditView
            android:id="@+id/ev_update_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
