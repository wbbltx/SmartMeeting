<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginRight="10dp"
        android:src="@mipmap/menu_background_top"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/menu_background_bottom"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_menu_guidang"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_menu_guidang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawableLeft="@mipmap/icon_create"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:text="归档"
                android:textColor="@color/colorWhite" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:background="@color/simple_line" />

        <RelativeLayout
            android:id="@+id/rl_menu_delete"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_menu_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawableLeft="@mipmap/page_delete"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:text="@string/delete"
                android:textColor="@color/colorWhite" />

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
