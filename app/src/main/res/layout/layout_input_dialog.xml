<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="40dp"
        android:background="@drawable/dialog_circular_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:gravity="center"
                android:text="@string/change_record_title"
                android:textColor="@color/gray3"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/graye" />

            <LinearLayout
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="106dp"
                android:background="@color/colorWhite"
                android:gravity="center"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/etInput"
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="center"
                    android:lines="1"
                    android:maxLength="18"
                    android:textColor="#3D82E0"
                    android:textCursorDrawable="@drawable/shape_cursor_color"
                    android:textSize="15sp" />

                <View
                    android:layout_width="210dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/gray3" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/graydc" />

            <LinearLayout
                android:id="@+id/double_button"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:visibility="visible">

                <Button
                    android:id="@+id/negativeButton"
                    android:layout_width="match_parent"
                    android:layout_height="35.0dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center"
                    android:text="C@string/btn_cancel"
                    android:textColor="@color/gray3"
                    android:textSize="16sp" />

                <View
                    android:id="@+id/partline"
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/graydc" />

                <Button
                    android:id="@+id/positiveButton"
                    android:layout_width="match_parent"
                    android:layout_height="35.0dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center"
                    android:text="@string/btn_confirm"
                    android:textColor="@color/gray3"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>  