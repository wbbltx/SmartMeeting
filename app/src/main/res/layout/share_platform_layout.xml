<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/share_bg"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/share_to"
            android:textSize="20sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="80dp"
            android:paddingRight="80dp">

            <TextView
                android:id="@+id/share_wechat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:drawableTop="@mipmap/share_wechat"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/wechat" />

            <TextView
                android:id="@+id/share_moments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:drawablePadding="5dp"
                android:drawableTop="@mipmap/share_moments"
                android:padding="10dp"
                android:text="@string/we_friend" />

            <TextView
                android:id="@+id/share_qq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:drawableTop="@mipmap/share_qq"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/qqchat"
                android:layout_below="@+id/share_moments"
                android:layout_alignStart="@+id/share_moments" />

            <TextView
                android:id="@+id/share_qzone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/share_wechat"
                android:drawablePadding="5dp"
                android:drawableTop="@mipmap/share_qzone"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/qzone" />

            <TextView
                android:visibility="gone"
                android:id="@+id/share_weibo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/share_moments"
                android:layout_below="@id/share_moments"
                android:drawablePadding="5dp"
                android:drawableTop="@mipmap/share_weibo"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/weibo" />
        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/share_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:src="@mipmap/share_cancel" />
</LinearLayout>
