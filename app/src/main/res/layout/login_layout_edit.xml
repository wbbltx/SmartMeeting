<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schema|s.android.com/tools"
    android:background="@color/simple_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_edit_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/et_edit_content"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edit_gray_bg"
            android:padding="16dp"
            android:textColor="@color/simple_text"
            android:textColorHint="@color/gray9"
            android:textCursorDrawable="@drawable/shape_cursor_color"
            android:textSize="13sp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="0dp" />

    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/tv_edit_end"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/gray5"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/til_edit_content"
        app:layout_constraintHorizontal_bias="0.957"
        app:layout_constraintLeft_toLeftOf="@+id/til_edit_content"
        app:layout_constraintRight_toRightOf="@+id/til_edit_content"
        app:layout_constraintTop_toTopOf="@+id/til_edit_content" />

    <ImageView
        android:id="@+id/iv_edit_end"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@mipmap/password_hide"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/til_edit_content"
        app:layout_constraintTop_toTopOf="@+id/til_edit_content"
        app:layout_constraintHorizontal_bias="0.957"
        app:layout_constraintLeft_toLeftOf="@+id/til_edit_content"
        app:layout_constraintRight_toRightOf="@+id/til_edit_content"
        />
</android.support.constraint.ConstraintLayout>