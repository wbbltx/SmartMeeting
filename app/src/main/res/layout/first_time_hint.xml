<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="40dp"
        android:background="@drawable/dialog_circular_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="106dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:gravity="center"
                android:text="长按酷神笔开关，指示红绿灯闪烁松手即可连接"
                android:textColor="@color/gray9"
                android:textSize="18sp" />

            <LinearLayout
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:background="@color/colorWhite"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/etInput"
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="center"
                    android:lines="1"
                    android:maxLength="18"
                    android:text="注：未开启手机蓝牙无法连接"
                    android:textColor="@android:color/holo_red_light"
                    android:textSize="15sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/graydc" />

            <LinearLayout
                android:id="@+id/double_button"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:visibility="visible">

                <Button
                    android:id="@+id/bt_iknow"
                    android:layout_width="match_parent"
                    android:layout_height="35.0dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center"
                    android:text="知道了"
                    android:textColor="#3D82E0"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>