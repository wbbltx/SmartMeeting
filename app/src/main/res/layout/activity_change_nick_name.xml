<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/simple_background"
    android:orientation="vertical"
    tools:context="com.newchinese.smartmeeting.ui.mine.activity.ChangeNickNameActivity">

    <include layout="@layout/bar_base" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="55dp"
        android:paddingTop="35dp">

        <EditText
            android:id="@+id/et_nick_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="最长包含9个汉字字符"
            android:lines="1"
            android:maxLength="9"
            android:textColor="@color/simple_text"
            android:textColorHint="@color/gray9"
            android:textCursorDrawable="@drawable/shape_cursor_color"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="#313131" />
    </LinearLayout>
</LinearLayout>
