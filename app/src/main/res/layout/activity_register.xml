<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_draw_base"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/simple_background"
    android:orientation="vertical"
    tools:context="com.newchinese.smartmeeting.ui.login.activity.RegisterActivity">

    <include android:id="@+id/aaa"
        layout="@layout/bar_base" />

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/aaa"
        layout="@layout/regist_layout_main" />

    <TextView
        android:id="@+id/statement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/statement"
        android:gravity="center"
        android:textSize="15sp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="22dp"/>
</RelativeLayout>
