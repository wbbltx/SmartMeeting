<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:context="com.newchinese.smartmeeting.ui.record.fragment.RecordsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/simple_background"
        android:paddingBottom="8dp"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:paddingTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_simple_circle_rect"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="7.5dp"
            android:paddingEnd="12dp"
            android:paddingStart="10dp"
            android:paddingTop="7.5dp">

            <EditText
                android:id="@+id/et_search_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="@string/search"
                android:lines="1"
                android:maxLength="20"
                android:textColor="@color/gray3"
                android:textColorHint="@color/gray9"
                android:textCursorDrawable="@drawable/shape_cursor_color"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/iv_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:src="@mipmap/record_search" />
        </LinearLayout>
    </RelativeLayout>

    <magicindicator.MagicIndicator
        android:id="@+id/tab_record_fragment"
        android:layout_width="match_parent"
        android:layout_height="45dp"
      />
    
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:src="@mipmap/transition"/>

    <com.newchinese.smartmeeting.widget.NoPreloadViewPager
        android:id="@+id/vp_record_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <!--<android.support.v7.widget.RecyclerView-->
        <!--android:id="@+id/rv_record_list"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent" />-->
</LinearLayout>
