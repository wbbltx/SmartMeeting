<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--登录界面风格-->
    <style name="Login_Radio_Button">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
    </style>

    <!--搜索弹出结果界面风格-->
    <style name="ScanResultDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsFloating">true</item>                       <!--是否浮在表面-->
        <item name="android:windowIsTranslucent">true</item>                   <!--是否半透明-->
        <item name="android:windowNoTitle">false</item>                         <!--窗口是否无标题-->
        <item name="android:windowBackground">@android:color/transparent</item>       <!--但窗口背景透明-->
        <item name="android:backgroundDimEnabled">true</item>                  <!--背景是否模糊-->
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>

    <!--PopupWindow的弹出和消失样式-->
    <style name="popup_anim">
        <item name="android:windowEnterAnimation">@anim/pop_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/pop_exit_anim</item>
    </style>

    <!--dialog样式-->
    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="AppBarTheme" parent="AppTheme">
        <item name="android:colorControlNormal">@color/colorWhite</item>
    </style>

    <!--通用白条背景-->
    <style name="simple_white_back">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:paddingLeft">@dimen/simple_lr_padding</item>
        <item name="android:paddingRight">@dimen/simple_lr_padding</item>
        <item name="android:background">@color/colorWhite</item>
    </style>
    <!--通用白条字体-->
    <style name="simple_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gray5</item>
        <item name="android:textSize">@dimen/simple_text_size</item>
    </style>
    <!--通用灰色字体-->
    <style name="simple_gray9_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:paddingRight">25dp</item>
        <item name="android:textColorHint">@color/gray9</item>
        <item name="android:textColor">@color/simple_text</item>
        <item name="android:maxLength">14</item>
        <item name="android:lines">1</item>
        <item name="android:textSize">13sp</item>
        <item name="android:background">@drawable/shape_gray_circle_back</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <!--录屏时间栏字体样式-->
    <style name="record_text">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">32px</item>
        <item name="android:textColor">@color/simple_blue</item>
    </style>
</resources>
